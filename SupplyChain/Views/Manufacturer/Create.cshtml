@model SupplyChain.Models.Manufacturer

@{
    ViewData["Title"] = "Novo Fabricante";
}

<h1>Novo Fabricante</h1>

<h4>Fabricantes</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Nome</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <br/>
                <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-success"/>
                <a asp-action="Index" style="margin-right: 10px" class="btn btn-primary">Voltar</a>
            </div>
        </form>
    </div>
</div>


